    <!-- El body de esta página es integrado por medio de la indexación con handlebars,
    la navegación se integra desde nagevation.hbs, esto gracias a la configuración de vistas en el index.js principal del proyecto-->

    {{> navegation }} <!-- indexación con los handlebars -->

    {{> message }}

    <div class="content-wrapper">
        <div class="content" id="page-content">
            {{{ body }}} <!-- indexación con los handlebars desde el manejo del main.hbs, este cuerpo está siendo modificado para darle cuerpo a la página -->
        </div>
    </div>

    <div class="footer" id="footer">
   {{> footer}}
    </div>

   <script>
  document.addEventListener("DOMContentLoaded", function() {
    var footer = document.getElementById("footer");

    function toggleFooter() {
      if ((window.innerHeight + window.scrollY) >= document.body.offsetHeight) {
        footer.style.display = "block"; // Mostrar el footer al llegar al final de la página
      } else {
        footer.style.display = "none"; // Ocultar el footer en otros casos
      }
    }

    window.addEventListener("scroll", toggleFooter);
  });
</script>

