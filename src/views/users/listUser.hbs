<main class="index">
    
<div class="container p-4">
    <div class="row-4">
        {{#each users}}
            <div class="col-md-12 mx-auto">
            <div class="card text-center">
                <div class="card-body">
                    <div class="card-header text-danger bg-dark">
                        <h3 class="card-title text-uppercase">
                            Nombre: {{fullname}}
                        </h3>
                    </div>
                        <h4 class="card-title text-uppercase">
                            Usuario: {{username}}
                        </h4>
                        <h4 class="card-title text-uppercase">
                            Tipo de usuario: {{typeUser}}
                        </h4>
                        <div>
                            <a href="/revokeUser/{{id}}/{{username}}/{{fullname}}" class="btn btn-danger m-4">Actualizar Permisos</a>
                        </div>
                </div>
            </div>
         </div>
         {{else}}
          <div class="col-md-4 mx-auto">
            <div class="card card-body text-center">
                <p class="text-danger">AÃºn no hay usuarios registrados</p>
            </div>
          </div>
        {{/each}}
    </div>
</div>
</main>