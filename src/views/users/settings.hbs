<main class="index">
  <div class="container p-4">
    <div class="row-4">
            <div class="col-md-12 h-50">
            <div class="card text-center">
                <div class="card-body">

                  <table class="table">
                    {{#if settings}}
                    <thead class="thead-dark">
                      <tr>
                        <th scope="col">Nombre-ADMIN</th>
                        <th scope="col">Usuario-ADMIN</th>
                        <th scope="col">Modificado</th>
                        <th scope="col">Tipo de Modificación</th>
                        <th scope="col">Fecha</th>
                      </tr>
                    </thead>
                    {{/if}}

                    {{#each settings}}
                    <tbody class="">
                      <tr>
                        <td>{{fullname}}</td>
                        <td>{{username}}</td>
                        <td>{{modified_name}}</td>
                        <td>{{exchange_rate}}</td>
                        <td>{{timeago creation_setting}}</td>
                      </tr>
                      {{else}}
                      <table class="table">
                         <thead class="thead-dark text-danger">
                           <tr>
                             <th scope="col">Nombre del ADMIN</th>
                             <th scope="col">Usuario</th>
                             <th scope="col">Modificado</th>
                             <th scope="col">Tipo de Modificación</th>
                             <th scope="col">Fecha</th>
                           </tr>
                         </thead>
                      <tr>
                        <td class="text-center text-danger" colspan="6">Aún no se han realizado cambios</td>
                      </tr>
                    </tbody>
                    {{/each}}
                  </table>

                </div>
            </div>
         </div>
    </div>
</div>
</main>