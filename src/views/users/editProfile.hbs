<main class="index">
  <div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card text-cengter">
                <div class="card-header text-center text-danger bg-dark">
                    <h3>EDITAR USUARIO</h3>
                </div>
                <div class="card-body">
                    <form action="/updateProfile" method="POST" name="usuario">
                       <div class="form-group">
                         <span>Nombre de usuario: {{username}}</span>
                       </div>
                       <div class="form-group">
                         <input type="text" name="fullname" placeholder="{{fullname}}" class="form-control" autofocus required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="repit_password" class="form-control" placeholder="Repetir Contraseña" required>
                       </div>
                       <div class="form-group">
                        <button class="btn btn-primary btn-block">Actualizar</button>
                       </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>