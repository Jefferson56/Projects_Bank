<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-cengter">
                <div class="card-header text-center text-danger bg-dark">
                    <h3>REGISTRO DE USUARIO</h3>
                </div>
                <div class="card-body">
                  <div class="logoTipo">
                        <img src="/img/Projects_Bank_Sin_Slogan.png" alt="Logo ProjectBank" name="logo" class="card-img-top mx-auto m-2">
                    </div>
                    <form action="/signup" method="POST" name="usuario">
                       <div class="form-group">
                         <input type="text" name="fullname" placeholder="Nombre Completo" class="form-control" autofocus required>
                       </div>
                       <div class="form-group">
                         <input type="email" name="username" placeholder="Correo Institucional" class="form-control" required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="password" class="form-control" placeholder="Contraseña" required>
                       </div>
                       <div class="form-group">
                         <input type="password" name="repit_password" class="form-control" placeholder="Repetir Contraseña" required>
                       </div>
                       <div class="form-group">
                         <input type="hidden" id="typeUser" name="typeUser" value="EXPONENT">
                        </div>
                       <div class="form-group">
                         <button class="btn btn-danger btn-block" id="send" name="send">Registrar</button>
                       </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>