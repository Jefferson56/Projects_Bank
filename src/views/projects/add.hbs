{{!-- Este es el formulario para registrar los proyectos, se configura desde acá pero es indexado en la página main.hbs --}}
<main class="index">
    <div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-header text-center bg-dark">
                    <h3 class="text-danger">REGISTRO DE PROYECTOS</h3>
                </div>
                <div class="card-body">
                    <form action="/projects/add" method="POST" enctype="multipart/form-data">
                        <div class="form-group">
                            <input type="text" class="form-control" name="title" placeholder="Título" autofocus required>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="5" class="form-control" placeholder="Descripción" required></textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="evolved" rows="5" class="form-control" placeholder="Involucrados" required></textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="threat" rows="5" class="form-control" placeholder="Riesgos y Amenzas" required></textarea>
                        </div>
                        <div class="form-group">
                             <label for="state">Estado:</label>
                              <select class="form-select" id="state" name="state" required>
                                <option value="Iniciación">Iniciación</option>
                                <option value="Planificación">Planificación</option>
                                <option value="Ejecución">Ejecución</option>
                                <option value="Control">Control</option>
                                <option value="Cierre">Cierre</option>
                                <option value="Éxito">Éxito</option>
                              </select>
                        </div>
                        <div class="form-group">
                            <input type="file" id="projectImage" name="projectImage">
                        </div>
                        <div class="form-group">
                            <button class="btn btn-danger btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>