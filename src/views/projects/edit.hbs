{{!-- Este es el formulario para editar los registros de los links, se configura desde acá pero es indexado en la página main.hbs --}}
<main class="index">
    <div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card">
                <div class="card-body">
                    <h2 class="text-center text-danger">EDITAR PROYECTO</h2>
                    <form action="/projects/edit/{{project.id}}" method="POST">
                        <div class="form-group">
                            <label>Título: </label>
                            <span>{{project.title}}</span>
                        </div>
                        <div class="form-group">
                            <textarea name="description" rows="10" class="form-control" placeholder="Descripción" required>{{project.description}}</textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="evolved" rows="5" class="form-control" placeholder="Involucrados" required>{{project.evolved}}</textarea>
                        </div>
                        <div class="form-group">
                            <textarea name="threat" rows="5" class="form-control" placeholder="Riesgos y Amenazas" required>{{project.threat}}</textarea>
                        </div>
                        <div class="form-group">
                             <label for="state">Estado:</label>
                              <select class="form-select" id="state" name="state" required>
                                <option value="Iniciación">Iniciación</option>
                                <option value="Planificación">Planificación</option>
                                <option value="Ejecución">Ejecución</option>
                                <option value="Control">Control</option>
                                <option value="Cierre">Cierre</option>
                                <option value="Éxito">Éxito</option>
                              </select>
                        </div>
                        <div class="form-group">
                            <button class="btn btn-success btn-block">Guardar</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
</main>